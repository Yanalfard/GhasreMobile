@model TblAlbum
<div class="albumBlock mat col uk-overflow-hidden" uk-lightbox>
    <a href="~/Images/ProductAlbum/@Model.TblImage.FirstOrDefault().Image" data-caption="نام">
        <img src="~/Images/ProductAlbum/@Model.TblImage.FirstOrDefault().Image" alt="" />
    </a>
    @foreach (var item in Model.TblImage)
    {
        <a href="~/Images/ProductAlbum/@item.Image" data-caption="نام"></a>
    }
    <div class="mat-pad col">
        <h2 class="uk-h5">@Model.Name</h2>
        @*<label class="uk-h6 text-3 uk-margin-small-top">4 شنبه 20 آبان</label>*@
    </div>
</div>