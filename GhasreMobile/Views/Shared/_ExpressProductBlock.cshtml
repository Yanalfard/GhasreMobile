@model TblSpecialOffer
@{
    var raiting = (Model.Product.TblRate.Count > 0) ? (Model.Product.TblRate.Sum(i => i.Rate) / Model.Product.TblRate.Count) : 0;
}
<div class="product-express">
    <div class="head">
        <h3>پیشنهاد ویژه</h3>
        <ul class="timer" countdown="@Model.ValidTill">
            <li>
                <label day></label>
                <span>روز</span>
            </li>
            <li>
                <label hour></label>
                <span>ساعت</span>
            </li>
            <li>
                <label minute></label>
                <span>دقیقه</span>
            </li>
            <li>
                <label second></label>
                <span>ثانیه</span>
            </li>
        </ul>
    </div>
    <div class="body">
        <a href="/Product/@Model.ProductId/@Model.Product.Name.Replace(" ","-")">
            <img src="~/Images/ProductMain/@Model.Product.MainImage" alt="" />
        </a>
        <div class="star">
            <label>
                <span>@raiting</span>
                <span uk-icon="icon:star;ratio:.9"></span>
            </label>
            <span>(@Model.Product.TblRate.Count)</span>
        </div>
        <ul class="colours">
            @foreach (var item in Model.Product.TblColor.Where(i => i.Count > 0))
            {
                @if (item.ColorCode.ToLower() == "#fff" || item.ColorCode.ToLower() == "#ffffff")
                {
                    <li style="background-color: @item.ColorCode;border: 1px black solid;"></li>
                }
                else
                {
                    <li style="background-color:@item.ColorCode"></li>
                }
            }
        </ul>
        <a href="/Product/@Model.ProductId/@Model.Product.Name.Replace(" ","-")" class="link-text">
            <h3 class="name" dir="rtl">
                @Model.Product.Name
            </h3>
        </a>

        @if (Model.Product.PriceAfterDiscount == 0)
        {
            <span class="price">
                <span class="t">ريال</span>
                <span>@Model.Product.PriceBeforeDiscount.Value.ToString("#,0")</span>
            </span>
        }
        else
        {
            <span class="discount">
                <span>@Model.Product.PriceBeforeDiscount.Value.ToString("#,0")</span>
            </span>
            <span class="price">
                <span class="t">ريال</span>
                <span>@Model.Product.PriceAfterDiscount.Value.ToString("#,0")</span>
            </span>
        }

    </div>
</div>