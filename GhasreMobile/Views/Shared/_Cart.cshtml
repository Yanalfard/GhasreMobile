@model IEnumerable<ShopCartItemVm>
<div class="mat-card cart">
    <table dir="rtl">
        <thead>
            <tr>
                <th>عکس</th>
                <th>نام محصول</th>
                <th>تعداد</th>
                <th>فی</th>
                <th>قیمت</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="img" uk-lightbox>
                        <a href="~/st/r/phones/p3.jpg">
                            <img src="~/st/r/phones/p3.jpg" alt="" />
                        </a>
                    </td>
                    <td class="name">
                        <div class="col">
                            <h5>@item.Name</h5>
                            <a class="link-text" href="">@item.Brand</a>
                        </div>
                    </td>
                    <td>
                        <div class="counter">
                            <button onclick="window.location.href = '/User/Cart/UpDownCount/@item.ProductID?command=up'" uk-icon="ratio:.6;icon:add-outline"></button>
                            <label>@item.Count</label>
                            <button onclick="window.location.href = '/User/Cart/UpDownCount/@item.ProductID?command=down'" uk-icon="ratio:.6;icon:remove-outline"></button>
                        </div>
                    </td>
                    <td class="price">
                        <div class="col">
                            @if (item.PriceAfterDiscount == 0)
                            {
                                <label> @item.PriceBeforeDiscount.Value.ToString("#,0")</label>
                            }
                            else
                            {
                                <label> @item.PriceBeforeDiscount.Value.ToString("#,0")</label>
                                <label> @item.PriceAfterDiscount.Value.ToString("#,0")</label>
                            }

                        </div>
                    </td>
                    <td class="price">
                        <div class="col">
                            <label></label>
                            <label>@item.Sum</label>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="finalize">
        <button class="btn btn-primary">نهایی سازی خرید</button>
        <div class="price">
            <h3>
                @Model.Sum(i=>i.Sum).Value.ToString("#,0")
            </h3>
            <span>
                تومان
            </span>
        </div>
    </div>
</div>