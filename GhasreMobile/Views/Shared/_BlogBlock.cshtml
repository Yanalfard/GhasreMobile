@model TblBlog
@{
    Random r = new Random();
}

<div class="blog-block col mat-card">
    <img src="~/Images/Blogs/@Model.MainImage" width="200" height="160" alt="وبلاگ" />
    <h3>@Model.Title</h3>
    <p dir="rtl">
        @Model.Description
    </p>
    <div class="row gap-t">
        <label>@Model.DateCreated.DateToShamsi()</label>
        <a href="/ViewBlog/@Model.BlogId/@Model.Title.Replace(" ","-")" dir="rtl">بیشتر...</a>
    </div>
</div>
