@model VmTopic
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["TopicId"] = Model.TopicId;
}

@section Styles{

    <link href="~/css/pages/forum.min.css" rel="stylesheet" />

}

@section Aside{

  
    @await Component.InvokeAsync("AdView") 
@await Component.InvokeAsync("AdView")
}

<nav class="breadcrumb uk-padding-remove">
    <a href="">تالار گفتگو</a>
    <a href="" class="active">صفحه اصلی</a>
</nav>

<div class="forum-block">
    <form asp-action="SubmitComment" asp-controller="Forum" class="content">
        <input type="text" asp-for="TopicId" style="display: none" value="@Model.TopicId" />
        <div class="rowr">
            <h5>@Model.Title</h5>
            <div class="rowr uk-margin-auto-right">
                <span class="uk-margin-small-left text-2">@Model.Client.Name</span>
                <span class="text-2">@(Model.DateCreated.HasValue ? Model.DateCreated.Value.DateToShamsi() : "")</span>
            </div>
        </div>
        <div class="forum-body" uk-lightbox>
            <p dir="rtl">
                @Model.Body
            </p>
            <div class="fg-col uk-margin-medium-top">
                <textarea name="comment" id="Comment" class="entry" placeholder="نظر شما..."></textarea>
            </div>
        </div>
        <div class="action uk-margin-small-top">
            <span class="row uk-margin-auto-top">
                <span uk-icon="ratio:.8;icon:chatbox-ellipses-outline"></span>
                <span> @Model.Comments.Count </span>
            </span>
            <a class="link-text  uk-margin-auto-top" href="" uk-icon="ratio:.8;icon:arrow-redo-outline"></a>
            <button class="btn btn-dashed uk-margin-auto-top uk-margin-auto-left">ثبت نظر</button>
        </div>
    </form>
    <div class="controls">
        <div class="col">
            <button class="link-text" uk-icon="chevron-up" onclick="VoteUp(@Model.TopicId);"></button>
            <label id="Vote@(Model.TopicId)">@Model.VoteCount</label>
            <button class="link-text" uk-icon="chevron-down" onclick="VoteDown(@Model.TopicId);"></button>
        </div>
    </div>
</div>

<div class="comment-section mat-card">
    <h3 class="uk-margin-bottom">نظرات کاربران</h3>
    <ul>
        <li>
            <partial name="_RepliableComment" />
        </li>
        <li>
            <partial name="_RepliableComment" />
        </li>
        <li>
            <partial name="_RepliableComment" />
        </li>
    </ul>
</div>

<!-- Modal Reply -->
<div id="ModalReply" uk-modal>
    <form class="form uk-modal-dialog uk-modal-body">
        <h3 class="uk-margin-bottom">
            پاسخ
        </h3>
        @*  آیدی کامنتی که بهش پاسخ داریم میدیم رو موقع واز کردن مودال پاس میدم اینتو  *@
        <input type="hidden" name="ParentId" id="CommentId" />
        <div class="fg-col">
            <div class="fg-label">متن پاسخ</div>
            <textarea class="entry"></textarea>
            <span class="text-danger"></span>
        </div>
        <div class="actions">
            <button class="btn btn-primary">ثبت</button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/js/BjaxLib.js"></script>

    <script>
        function reply(commentId) {
            // آیدی کامنتی که بهش پاسخ داریم میدیم رو میزارم تو یه اینپوت
            const input = document.getElementById('CommentId');
            input.value = commentId;

            UIkit.modal(document.getElementById('ModalReply')).show();
        }
    </script>

    <script>

        function VoteUp(val) {
            var result = Bjax("/Forum/VoteUp?id=", val, "SP");
            if (result) {
                var vote = document.getElementById('Vote' + val);
                vote.innerText = parseInt(vote.innerText) + 1;
            } else {
                window.location = "";
            }
        }
        function VoteDown(val) {
            var result = Bjax("/Forum/VoteDown?id=", val, "SP");
            if (result) {
                var vote = document.getElementById('Vote' + val);
                vote.innerText = parseInt(vote.innerText) - 1;
            } else {
                window.location = "";
            }
        }
    </script>

}
