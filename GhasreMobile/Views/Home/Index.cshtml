    @await Component.InvokeAsync("SpecialOfferViem", new { swap = "Exp2" })

    @await Component.InvokeAsync("AdView", new { swap = "Ad3" })

    @await Component.InvokeAsync("AdView", new { swap = "Ad4" })

}
