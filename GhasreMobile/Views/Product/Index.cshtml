@model TblProduct
@{
    ViewData["Title"] = "Index";
    ViewData["Single"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/css/pages/product.min.css" rel="stylesheet" />
}

<nav class="breadcrumb">
    <a href="">کالا</a>
    <a href="">هواوی</a>
    <a href="" class="active">هواوی میت 8</a>
</nav>

<div class="pr mat-card">
    <div class="pr-title col">
        <h1 class="uk-h4" dir="rtl">
            @Model.Name
        </h1>
        <div class="rowr uk-margin-top">
            <span class="row" dir="rtl">
                <span class="uk-margin-small-left">برند:</span>
                <a href="">@Model.Brand.Name</a>
            </span>
            <span class="row uk-margin-right" dir="rtl">
                <span class="uk-margin-small-left">دسته:</span>
                <a href="">@Model.Catagory.Name</a>
            </span>
            <span class="row uk-margin-right" dir="rtl">
                <span class="uk-margin-small-left">کد:</span>
                <a href="">#@Model.ProductId</a>
            </span>
        </div>
    </div>

    <div class="pr-image">
        <div class="head">

        </div>
        <div uk-slideshow="animation: slide; ratio:20:23">
            <div class="border">
                <div class="slider">
                    <ul class="img uk-slideshow-items" uk-lightbox="animation: slide">
                        <li>
                            <a href="~/Images/ProductMain/@Model.MainImage">
                                <img src="~/Images/ProductMain/@Model.MainImage" alt="" uk-cover>
                            </a>
                        </li>
                        @foreach (var item in Model.TblProductImageRel)
                        {
                            <li>
                                <a href="~/Images/ProductAlbum/@item.Image.Image">
                                    <img src="~/Images/ProductAlbum/@item.Image.Image" alt="" uk-cover>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="foot">
                    <div class="left">
                        <button class="action" uk-tooltip="افزورن به لیست مقایسه" uk-icon="contrast"></button>
                        <button class="action" uk-tooltip="افزودن به لیست علاقه مندی ها" uk-icon="bookmark-outline"></button>
                    </div>
                    <div class="right">
                        <button class="action" uk-tooltip="اشتراک گذاری" uk-icon="share-social-outline"></button>
                        <button class="action" uk-tooltip="فعال کردن اعلان ها" uk-icon="notifications-outline"></button>
                    </div>
                </div>
            </div>
            <div class="thumbnav uk-margin-small-top">
                <ul class="uk-thumbnav">
                    <li uk-slideshow-item="0"><a href="#"><img src="~/Images/ProductMain/@Model.MainImage" alt=""></a></li>
                    @foreach (var item in Model.TblProductImageRel)
                    {
                        <li uk-slideshow-item="@(Model.TblProductImageRel.ToList().IndexOf(item)+1)"><a href="#"><img src="~/Images/ProductAlbum/@item.Image.Image" alt=""></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="pr-content col">
        <div class="body">
            @Html.Raw(Model.DescriptionShortHtml)
        </div>
        <div class="price">

            @if (Model.PriceAfterDiscount == 0)
            {
                <h3 class="actual">
                    @Model.PriceBeforeDiscount.Value.ToString("#,0")
                    <span class="t">تومان</span>
                </h3>
            }
            else
            {
                <h4 class="discount">
                    @Model.PriceBeforeDiscount.Value.ToString("#,0")
                </h4>
                <h3 class="actual">
                    @Model.PriceAfterDiscount.Value.ToString("#,0")
                    <span class="t">تومان</span>
                </h3>
            }

        </div>
        <div class="colours">
            <h4>رنگ بندی</h4>
            <ul class="grid">
                @foreach (var item in Model.TblColor)
                {
                    <li>
                        <div class="clr">
                            <span>@item.Name</span>
                            <strong style="background-color: @item.ColorCode"></strong>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="cart uk-margin-top">
            <div class="counter rowr">
                <button class="plus" uk-icon="add"></button>
                <span class="count">
                    <span>16</span>
                </span>
                <button class="minus" uk-icon="remove"></button>
            </div>
            <button class="button">
                <span>افزودن به سبد خرید</span>
                <span uk-icon="cart"></span>
            </button>
        </div>
    </div>
    <div class="pr-specs">

    </div>
</div>

<nav class="section-nav">
    <a href="">بررسی تخصصی</a>
    <a href="">جزئیات فنی</a>
    <a href="">نظر خریداران محصول</a>
</nav>

<div class="mat-card gap-t">
    @Html.Raw(Model.DescriptionLongHtml)
</div>

<div class="details col mat-card gap-t">
    <h3 dir="rtl">جزئیات فنی</h3>
    <table dir="rtl">
        <tbody>
            @foreach (var item in Model.TblProductPropertyRel)
            {
                @if (item.Value != null)
                {
                    <tr>
                        <td>@item.Property.Name</td>
                        <td>@item.Value</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

<div class="mat-card gap-t">
    <h4>
        نظر شما
    </h4>
    <div class="fg-col uk-margin-small-top">
        <textarea class="entry"></textarea>
        <div class="rowr uk-margin-small-top">
            <button class="btn btn-dashed uk-margin-auto-top">ثبت نظر</button>
            <div class="row star-container uk-margin-auto-right">
                <span class="star-cb-group">
                    <input type="radio" id="rating-5" name="Raiting" value="5" /><label for="rating-5">5</label>
                    <input type="radio" id="rating-4" name="Raiting" value="4" checked="checked" /><label for="rating-4">4</label>
                    <input type="radio" id="rating-3" name="Raiting" value="3" /><label for="rating-3">3</label>
                    <input type="radio" id="rating-2" name="Raiting" value="2" /><label for="rating-2">2</label>
                    <input type="radio" id="rating-1" name="Raiting" value="1" /><label for="rating-1">1</label>
                    <input type="radio" id="rating-0" name="Raiting" value="0" class="star-cb-clear" /><label for="rating-0">0</label>
                </span>
            </div>
        </div>
    </div>
</div>
@if (Model.TblProductCommentRel.Any())
{
    <div class="comment-section mat-card gap-t">
        <h3>نظرات کاربران</h3>
        <ul>
            @foreach (var item in Model.TblProductCommentRel.Where(i => i.Comment.IsValid))
            {
                <li>
                    <partial name="_CommentBlock" model="item.Comment" />
                </li>
            }
        </ul>
    </div>
}

<div class="product-slider gap-t uk-position-relative uk-visible-toggle" tabindex="-1" uk-slider="">

    <div class="title">
        <a href="#" class="dot-container">
            <img src="~/st/v/dot.svg" alt="" class="dot" />
            <h3>محصولات مرتبط</h3>
        </a>
    </div>

