    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <link href="~/css/pages/product.min.css" rel="stylesheet" />

}


<nav class="breadcrumb">
    <a href="">کالا</a>
    <a href="">هواوی</a>
    <a href="" class="active">هواوی میت 8</a>
</nav>

<div class="pr mat-card">
    <div class="pr-title col">
        <h1 class="uk-h4" dir="rtl">
            گوشی موبایل هواوی مدل Lite p10 دو سیم کارت
        </h1>
        <div class="rowr uk-margin-top">
            <span class="row" dir="rtl">
                <span class="uk-margin-small-left">برند:</span>
                <a href="">هواوی</a>
            </span>
            <span class="row uk-margin-right" dir="rtl">
                <span class="uk-margin-small-left">دسته:</span>
                <a href="">موبایل</a>
            </span>
            <span class="row uk-margin-right" dir="rtl">
                <span class="uk-margin-small-left">کد:</span>
                <a href="">#4456</a>
            </span>
        </div>
    </div>
    <div class="pr-image">
        <div class="head">

        </div>
        <div uk-slideshow="animation: slide; ratio:20:23">
            <div class="border">
                <div class="slider">
                    <ul class="img uk-slideshow-items" uk-lightbox="animation: slide">
                        <li>
                            <a href="~/st/r/phones/p1.jpg">
                                <img src="~/st/r/phones/p1.jpg" alt="" uk-cover>
                            </a>
                        </li>
                        <li>
                            <a href="~/st/r/phones/p2.jpg">
                                <img src="~/st/r/phones/p2.jpg" alt="" uk-cover>
                            </a>
                        </li>
                        <li>
                            <a href="~/st/r/phones/p3.jpg">
                                <img src="~/st/r/phones/p3.jpg" alt="" uk-cover>
                            </a>
                        </li>
                        <li>
                            <a href="~/st/r/phones/p4.jpg">
                                <img src="~/st/r/phones/p4.jpg" alt="" uk-cover>
                            </a>
                        </li>
                        <li>
                            <a href="~/st/r/phones/p5.jpg">
                                <img src="~/st/r/phones/p5.jpg" alt="" uk-cover>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="foot">
                    <div class="left">
                        <button class="action" uk-tooltip="افزورن به لیست مقایسه" uk-icon="contrast"></button>
                        <button class="action" uk-tooltip="افزودن به لیست علاقه مندی ها" uk-icon="bookmark-outline"></button>
                    </div>
                    <div class="right">
                        <button class="action" uk-tooltip="اشتراک گذاری" uk-icon="share-social-outline"></button>
                        <button class="action" uk-tooltip="فعال کردن اعلان ها" uk-icon="notifications-outline"></button>
                    </div>
                </div>
            </div>
            <div class="thumbnav uk-margin-small-top">
                <ul class="uk-thumbnav">
                    <li uk-slideshow-item="0"><a href="#"><img src="~/st/r/phones/p1.jpg" alt=""></a></li>
                    <li uk-slideshow-item="1"><a href="#"><img src="~/st/r/phones/p2.jpg" alt=""></a></li>
                    <li uk-slideshow-item="2"><a href="#"><img src="~/st/r/phones/p3.jpg" alt=""></a></li>
                    <li uk-slideshow-item="3"><a href="#"><img src="~/st/r/phones/p4.jpg" alt=""></a></li>
                    <li uk-slideshow-item="4"><a href="#"><img src="~/st/r/phones/p5.jpg" alt=""></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="pr-content col">
        <div class="body">
            
        </div>
        <div class="price">
            <h4>
                4,200,000
            </h4>
            <h3>
                4,100,000
                <span>تومان</span>
            </h3>
        </div>
        <div class="colours">
            <h4>رنگ بندی</h4>
            <ul>
                <li>
                    <div class="clr">
                        <span>سفید</span>
                        <span></span>
                    </div>
                </li>
                <li>
                    <div class="clr">
                        <span>طلایی</span>
                        <span></span>
                    </div>
                </li>
                <li>
                    <div class="clr">
                        <span>نقره ای</span>
                        <span></span>
                    </div>
                </li>
            </ul>
        </div>
        <div class="cart">
            <div class="counter rowr">
                <button class="plus" uk-icon="add"></button>
                <span class="count">
                    <span>16</span>
                </span>
                <button class="minus" uk-icon="remove"></button>
            </div>
            <button class="button">
                <span>افزودن به سبد خرید</span>
                <span uk-icon="cart"></span>
            </button>
        </div>
    </div>
    <div class="pr-specs">

    </div>
