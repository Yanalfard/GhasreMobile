@model DataLayer.Models.TblAd
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        ویرایش تبلیغات
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Edit" asp-controller="Ad" asp-area="Admin" enctype="multipart/form-data">
    <input type="hidden" asp-for="AdId" />
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>نام</label>
                <input asp-for="Label" class="form-control form-control-sm" placeholder="مثال: ...">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label>ویرایش لینک</label>
                <input asp-for="Link" class="form-control form-control-sm" placeholder="...//:https">
                <span class="text-danger"></span>
            </div>
        </div>
        <label class="mt-2">ویرایش تصویر</label>
        <br />
        <div class="custom-file col-md-7">
            <input asp-for="Image" type="file" class="custom-file-input form-control form-control-sm" onchange="inputChanged(this)">
            <label class="custom-file-label" for="Image" data-browse="انتخاب" id="FileName">انتخاب تصویر</label>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">ویرایش<span class="icon-holder uk-margin-small-right" uk-icon="create-outline"></span></button>
    </div>
</form>
<script>
    function inputChanged(sender) {
        var fileName = sender.files[0].name;
        sender.parentElement.querySelector('.custom-file-label').innerHTML = fileName;
    }
</script>