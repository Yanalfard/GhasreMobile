
@{
    ViewData["Title"] = "سفارشات انلاین";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="pr-1 pt-2">
                    <div class="card-form form-row">
                        <div class="form-input">
                            <div class="form-inline">
                                <div class="form-group mx-sm-1 mb-2">
                                    <input id="SearchInputUserPhone" class="form-control uk-text-small" type="text" placeholder="شماره تماس مشتری" value="">
                                </div>

                            </div>
                        </div>
                        <div class="form-toolbar mr-3">
                            <button onclick="BtnSearch()" type="button" class="btn btn-primary btn-sm">جستجو<span class="icon-holder uk-margin-small-right" uk-icon="search-outline"></span></button>
                        </div>
                    </div>

                </div>
            </div>
            <div id="card-table" class="card-body flex-div">
                <div class="table-responsive flex">
                    <table class="table fixed">
                        <thead class="thead-light">
                            <tr>
                                <th>موضوع</th>
                                <th>نام کاربری</th>
                                <th>تاریخ</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>سامسونگ</td>
                                <td>ali00</td>
                                <td>1399</td>
                                <td>
                                    <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="تایید شده">
                                        <span class="text-success" uk-icon="checkmark-circle-outline"></span>
                                    </span>
                                    <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="تایید نشده">
                                        <span class="text-danger" uk-icon="checkmark-circle-outline"></span>
                                    </span>

                                </td>
                                <td>
                                    <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="جزئیات">
                                        <a onclick="Info()" data-toggle="modal" data-target="#modalSave" class="text-primary" uk-icon="information-circle-outline"></a>
                                    </span>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-white">
                <nav aria-label="Page navigation example">
                    @*@await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })*@
                </nav>
            </div>
        </div>
    </div>
</div>

@section Script{

    <script>
        function Info(id) {
            $.get("/Admin/OnlineOrder/Info/" + id, function (result) {
                $(".modal-content").html(result);
            });
        }        
    </script>

}