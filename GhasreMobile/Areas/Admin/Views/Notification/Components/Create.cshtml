<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        افزودن اعلان
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div class=" col-md-6">
            <input type="checkbox" id="SendAll" onchange="SendFunction(this)"> ارسال برای همه
        </div>
        <div class="form-row mr-2 mt-3">
            <div class="form-group col-md-3">
                <label>شماره تماس</label>
                <input type="tel" class="form-control form-control-sm" placeholder="مثال:0914...." id="PhoneNumber" onchange="ShowUser()">
            </div>
            <div class="mt-md-4 pt-md-2 mr-md-3 d-none" id="UserName">
                <span class="text-success" uk-icon="checkmark-circle-outline"></span>
                <label class="">نام کاربر</label>
            </div>
        </div>
        <div class="form-group col-md-7 mt-2">
            <label>متن اعلان</label>
            <textarea class="textarea-fix-height-120 bg-light uk-border-rounded" placeholder=" متن اعلان را بنویسید... "></textarea>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">افزودن<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
    </div>
</form>
<script>

    function SendFunction(checkboxElem) {
        if (checkboxElem.checked) {
            document.getElementById("PhoneNumber").disabled = true;
        } else {
            document.getElementById("PhoneNumber").disabled = false;
        }
    }

    function ShowUser() {
        document.getElementById("UserName").classList.remove("d-none");
    }
</script>