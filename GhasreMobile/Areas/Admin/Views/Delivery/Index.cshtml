
@{
    ViewData["Title"] = "ارائه خدمات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    #deliveryCardBody {
        padding-top:6px;
    }
</style>

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white ">
                <div class="pr-1 pt-2">
                    <div class="card-form form-row">
                        <div class="form-input">
                            <div class="form-inline">
                                <div class="form-group mx-sm-1 mb-2">
                                    <input id="SearchInput" class="form-control uk-text-small" type="text" placeholder="متن جستجو" value="">
                                </div>

                            </div>
                        </div>
                        <div class="form-toolbar">
                            <button onclick="" type="button" class="btn btn-primary btn-sm mr-3">جستجو<span class="icon-holder uk-margin-small-right" uk-icon="search-outline"></span></button>
                        </div>

                    </div>

                </div>
            </div>
            <div id="deliveryCardBody" class="card-body table-responsive flex">
                <table class="table fixed">
                    <thead class="thead-light">
                        <tr>
                            <th>نام</th>
                            <th>شماره تماس</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>علی</td>
                            <td>
                                <span>09142121252</span>
                            <td class="mr-1">
                                <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="تایید شده">
                                    <span class="text-success" uk-icon="checkmark-circle-outline"></span>
                                </span>
                                <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="تایید نشده">
                                    <span class="text-danger" uk-icon="close-circle-outline"></span>
                                </span>
                            </td>
                            <td>
                                <span class="mr-2" data-placement="top" data-toggle="tooltip" title="" data-original-title="جزئیات">
                                    <a id="testclick" data-toggle="modal" data-target="#modalSave" class="text-primary" uk-icon="information-circle-outline"></a>
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white">
            <nav aria-label="Page navigation example">

            </nav>
        </div>
    </div>
</div>

@section Script{ 

<script>
    $("#testclick").click(function () {

        $.get("/Admin/Delivery/Info", function (result) {
            $(".modal-content").html(result);
        });

    });
</script>

}