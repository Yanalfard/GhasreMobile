
@{
    ViewData["Title"] = "تنظیمات سایت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">                
            </div>
            <div id="card-table" class="card-body flex-div">
                <form class="form-row mt-3 fixed overflow-auto">
                    <div class="form-group col-lg-12">
                        <label>هزینه ارسال با پست: </label>
                        <input class="form-control form-control-sm d-inline-block d-sm-block col-lg-10 float-left" placeholder="مثال: 19,000">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label>هزینه ارسال با تیپاکس:</label>
                        <input class="form-control form-control-sm d-inline-block d-sm-block col-lg-10 float-left" placeholder="مثال: 28,000">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12 mt-lg-3">
                        <label>تماس با ما:</label>
                        <textarea class="form-control form-control-sm d-inline-block d-sm-block col-lg-10 float-left" placeholder="..."></textarea>
                        <span class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm text-white">ثبت تغییرات<span class="icon-holder uk-margin-small-right" uk-icon="create-outline"></span></button>

                </form>
            </div>

            <div class="card-footer bg-white text-left">
                <nav aria-label="Page navigation example">
                    @*@await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })*@
                </nav>
            </div>
        </div>
    </div>
</div>
