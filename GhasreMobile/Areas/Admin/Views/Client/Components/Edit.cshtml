<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        ویرایش کاربر
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>نام کاربر</label>
                <input type="text" class="form-control form-control-sm" placeholder="مثال: پیمان معادی">
            </div>
            <div class="form-group col-md-3">
                <label>تعیین نقش</label>
                <select class="form-control form-control-sm">
                    <option value="">نقش1</option>
                    <option value="">نقش2</option>
                    <option value="">نقش3</option>
                </select>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>شماره تماس</label>
                <input type="tel" class="form-control form-control-sm" placeholder="09145416" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>کیف پول</label>
                <input type="number" class="form-control form-control-sm" placeholder="840000" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>رمز ورود</label>
                <input type="password" class="form-control form-control-sm" placeholder="840000" disabled>
            </div>
            <div class="form-group col-md-3">
                <label>تاریخ ثبت نام</label>
                <input type="date" class="form-control form-control-sm" placeholder="840000" disabled>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">ویرایش<span class="icon-holder uk-margin-small-right" uk-icon="create-outline"></span></button>
    </div>
</form>